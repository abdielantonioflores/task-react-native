{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
